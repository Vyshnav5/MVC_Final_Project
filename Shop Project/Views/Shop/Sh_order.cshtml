@model Order

@{
    Layout = "~/Views/Shared/Shop_Layout.cshtml";
    var s_id = Context.Session.GetInt32("S_id");
}

<h1>Create Order</h1>
<a class="btn btn-info" asp-controller="Shop" asp-action="Sh_Order_det">View</a>
<form method="post" asp-action="Sh_order">
    <input type="hidden" asp-for="S_id" value="@s_id" />
    <input type="hidden" asp-for="O_status" value="RequestSent" />

        <div class="form-group">
            <label asp-for="P_id" class="control-label">Product</label>
            <select asp-for="P_id" class="form-control" asp-items="@(new SelectList(ViewBag.ProductList, "P_id", "P_name"))" required></select>
        </div>
    <div class="form-group">
        <label asp-for="O_date" class="form-label">Order Date</label>
        <input asp-for="O_date" type="date" class="form-control" required />
        <span asp-validation-for="O_date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="O_quantity" class="form-label">Quantity</label>
        <input asp-for="O_quantity" type="number" class="form-control" required />
        <span asp-validation-for="O_quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary" asp-controller="Shop" asp-action="Sh_order">Place Order</button>
    </div>
</form>
