@model Complaint

@{
    Layout = "~/Views/Shared/Shop_Layout.cshtml";
    var s_id = Context.Session.GetInt32("S_id");

}

<h1>Create Complaint</h1>
<a class="btn btn-info" >View Complaints</a>

<form method="post" asp-action="Sh_comp">
    <input type="hidden" asp-for="S_id" value="@s_id" />
    <input type="hidden" asp-for="Cm_reply" value="Sent" />

    <div class="form-group">
        <label asp-for="Cm_description" class="form-label">Description</label>
        <textarea asp-for="Cm_description" class="form-control"></textarea>
        <span asp-validation-for="Cm_description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" asp-controller="Shop" asp-action="Sh_comp" class="btn btn-primary">Submit Complaint</button>
    </div>
</form>
