@model IEnumerable<Notification>;

@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";

}
<a asp-controller="Admin" asp-action="AD_noti">Register</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Notification
            </th>
            <th>
                Date
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.N_description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.N_date)
                </td>
                <td>
                    <a asp-action="AD_not_Edit" asp-controller="Admin" asp-route-id="@item.N_id">Edit</a>
                    <a asp-action="AD_not_Delete" asp-route-id="@item.N_id">Delete</a>
                </td>
            </tr>
        }
    </tbody>


</table>
