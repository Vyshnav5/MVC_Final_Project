@model Customer

@{
    Layout = "~/Views/Shared/Shop_Layout.cshtml";
}

<h1>Create</h1>
<a class="btn btn-info" asp-controller="Shop" asp-action="Sh_Cust_det">View</a>
<form method="post" class="row g-3">
    <input type="hidden" asp-for="Cu_id" />

    <div class="col-md-8">
        <label asp-for="Cu_name" class="form-label">NAME</label>
        <input asp-for="Cu_name" class="form-control" id="Name">
    </div>
    <div class="col-md-8">
        <label asp-for="Cu_ph" class="form-label">Price</label>
        <input asp-for="Cu_ph" class="form-control" id="Price">
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary" asp-controller="Shop" asp-action="Sh_Cu_Edit">EDIT</button>
    </div>
</form>
