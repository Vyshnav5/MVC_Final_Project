@model Shop_Project.Models.Customer

@{
    Layout = "~/Views/Shared/Shop_Layout.cshtml";
}

<h1>Register Customer</h1>
<a class="btn btn-info" asp-controller="Shop" asp-action="Sh_Cust_det">View Customers</a>

<form method="post" asp-action="Sh_Cust">
    <div class="form-group">
        <label asp-for="Cu_name" class="control-label">Customer Name</label>
        <input asp-for="Cu_name" class="form-control" />
        <span asp-validation-for="Cu_name" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Cu_ph" class="control-label">Phone Number</label>
        <input asp-for="Cu_ph" class="form-control" />
        <span asp-validation-for="Cu_ph" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" asp-controller="Shop" asp-action="Sh_Cust" class="btn btn-primary">Register</button>
    </div>
</form>


