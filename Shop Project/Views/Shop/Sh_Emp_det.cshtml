@model PaginatedList<Employee>;

@{
    Layout = "~/Views/Shared/Shop_Layout.cshtml";

}
<a asp-controller="Shop" asp-action="Sh_Emp_Reg">Register</a>
<form method="post">
</form>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
           
            <th>
                Name
            </th>
            <th>
                PH
            </th>
            <th>
                Email
            </th>
            <th>
                Position
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
            
                <td>
                    @Html.DisplayFor(modelItem => item.E_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.E_ph)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.E_email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.E_position)
                </td>
                <td>
                    <a asp-action="SE_Edit" asp-controller="Shop" asp-route-id="@item.E_id">Edit</a>
                    <a asp-action="SE_Delete" asp-route-id="@item.E_id">Delete</a>
                </td>
            </tr>
        }
    </tbody>


</table>

@{
    var preDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<a action="View_reg" asp-route-pageNumber="@(Model.PageIndex-1)" class="btn btn-outline-danger @preDisabled">
    Previous
</a>
<a action="View_reg" asp-route-pageNumber="@(Model. PageIndex+1)" class="btn btn-outline-danger @nextDisabled">
    Next
</a>

