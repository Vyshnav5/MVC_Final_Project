@model View2

@{
    Layout = "~/Views/Shared/Shop_Layout.cshtml";
    var s_id = Context.Session.GetInt32("S_id");
}

<h1>Create Sale</h1>
<a class="btn btn-info" asp-controller="Shop" asp-action="Sh_Sal_det">View</a>
<form method="post" class="row g-3">
    <input type="hidden" asp-for="S_id" value="@s_id" />
    <input type="hidden" asp-for="Cu_id" value="1221" />

    <div class="form-group">
        <label asp-for="Cu_id" class="control-label">Customer</label>
        <select asp-for="Cu_id" class="form-control" asp-items="@(new SelectList(ViewBag.CustomerList, "Cu_id", "Cu_name"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="P_id" class="control-label">Product</label>
        <select asp-for="P_id" class="form-control" asp-items="@(new SelectList(ViewBag.ProductList, "P_id", "P_name"))"></select>
    </div>
    <br />
    <div class="col-md-8">
        <label asp-for="Sl_date" class="form-label">Date</label>
        <input asp-for="Sl_date" type="date" class="form-control" id="date" />
        <span asp-validation-for="Sl_date" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary" asp-controller="Shop" asp-action="Sh_Sale">Sell</button>
    </div>
</form>
